.sideBar
  .sideBar__user
    %p.sideBar__user__name 
      = current_user.name
      = link_to edit_user_path(:id) do
        %i.fa.fa-cog
      = link_to new_group_path do
        %i.fa.fa-edit
    
  .sideBar__group
    .sideBar__group-margin
      - current_user.groups.each do |group|
        = link_to group_messages_path(group) do
          .sideBar__group-margin__name
            = group.name
          .sideBar__group-margin__message
            = group.show_last_message
  
.groupBox
  .groupBox__member
    %p.groupbox__member__edit Edit
    %p.groupBox__member__title test-group
    %p.groupBox__member__name Members:

  .messages
    = render @messages
  .groupBox__footer
    .groupBox__footer__white 
      //以下、カリキュラムを参考
      = form_for [@group, @message] do |f|
        = f.text_field :content, class: 'form__message', placeholder: 'type a message'
        .form__mask
          = f.label :image, class: 'form__mask__image' do
            = fa_icon 'picture-o', class: 'icon'
            =f.file_field :image, class: 'hidden'
          =f.submit 'Send', class: 'form__submit'

